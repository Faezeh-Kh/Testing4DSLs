Package ElevatorTestPurpose{
	Domain{
		entities://given from the Abstract syntax
		//the classes
		- Elevator
		- Floor
		- ElevatorButton
		- FloorButton
		- UpButton
		- DownButton
		//the associations
		- nextFloor
		- currentFloor
		- requestedFloor
		;
		events:
		- setTo
		;
	}
	Test Purpose{
		TP Id openning_doors
		Test objective ""
		Initial conditions
		with {
			the currentFloor entity setTo the "Floor: nr = 1" and
			the UpButton entity setTo the "Button: pressed = true" and
			the requestedFloor entity setTo the "Floor: nr = 1"
		}
		Expected behaviour
			ensure that{
				when{
					 the Elevator entity setTo the "Elevator: doors_open = false" and 
					 the FloorButton entity setTo the "Button: pressed = true" and
					 the requestedFloor entity setTo the "Floor: nr = 2"
				}
				then{
					the currentFloor entity setTo the "Floor: nr = 1" and
					the Elevator entity setTo the "Elevator: doors_open = true"
				}
			}
	}
}