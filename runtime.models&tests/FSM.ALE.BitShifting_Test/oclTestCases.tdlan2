Package testDesignPackage_template {
	Import all from common ;
	Import all from fsmSpecificTypes;
	Import all from testConfiguration ;
		
	State S0 (
		_name = "S0"
	);
	State S1 (
		_name = "S1"
	);
	State S2 (
		_name = "S2"
	);
	
	Test Description bitShiftingOclTest1 uses configuration oclConfiguration{
		tester.genericTestGate sends runModel to fsm.genericMUTGate;
		
		tester.oclTestGate sends oclQuery (query = "self.ownedTransitions->select(t|t.input = '0' and t.output = '1')") to fsm.oclMUTGate;
		fsm.oclMUTGate sends "State Machine BitShifting::Transition S1_to_S2" to tester.oclTestGate;
		
		tester.oclTestGate sends oclQuery (query = "self.ownedStates") to fsm.oclMUTGate;
		fsm.oclMUTGate sends "[State Machine BitShifting::State S0, State Machine BitShifting::State S1, State Machine BitShifting::State S2]" to tester.oclTestGate;
	}
	//By having MUT in TDL format, the oracle can be defined in a more readable way
	Test Description bitShiftingOclTest2 uses configuration oclConfiguration{
		tester.genericTestGate sends runModel to fsm.genericMUTGate;
		tester.oclTestGate sends oclQuery (query = "self.ownedStates") to fsm.oclMUTGate;
		fsm.oclMUTGate sends {S0, S1, S2} to tester.oclTestGate;
		set verdict to PASS;
	}
}