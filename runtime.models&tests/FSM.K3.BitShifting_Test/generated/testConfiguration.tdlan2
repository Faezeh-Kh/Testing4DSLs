Package testConfiguration {
	Import all from common ;
	Gate Type genericGate accepts genericCommand;
	Gate Type oclGate accepts OCL ;
	Component Type TestSystem having {
		gate genericTestGate of type genericGate ;
		gate oclTestGate of type oclGate ;
	}
	Component Type MUT having {
		gate genericMUTGate of type genericGate ;
		gate oclMUTGate of type oclGate ;
	}
	Annotation MUTPath ;
	Annotation DSLPath ;
	Test Configuration genericConfiguration {
		create Tester tester of type TestSystem ;
		create SUT k3fsm of type MUT with { 
			MUTPath : '/FSM.K3.BitShifting/BitShifting.k3fsmxmi' ; 
			DSLPath : 'platform:/plugin/org.eclipse.gemoc.example.k3fsm.xdsml/K3fsm.dsl' ;
		} ;
		connect tester.genericTestGate to k3fsm.genericMUTGate ;
	}
	Test Configuration oclConfiguration {
		create Tester tester of type TestSystem ;
		create SUT k3fsm of type MUT with { 
			MUTPath : '/FSM.K3.BitShifting/BitShifting.k3fsmxmi' ; 
			DSLPath : 'platform:/plugin/org.eclipse.gemoc.example.k3fsm.xdsml/K3fsm.dsl' ;
		} ;
		connect tester.genericTestGate to k3fsm.genericMUTGate ;
		connect tester.oclTestGate to k3fsm.oclMUTGate ;
	}
}