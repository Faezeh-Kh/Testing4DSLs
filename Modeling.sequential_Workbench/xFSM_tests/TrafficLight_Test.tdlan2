Package testSuite {
	Import all from common ;
	Import all from k3fsmSpecificTypes ;
	Import all from testConfiguration ;
	
	FSM FSMNewState(_name = "TrafficLight");
	State S0 (_name = "S0");
	
	Test Description test1 uses configuration trafficLightConfiguration{
		tester.genericGate sends FSMNewState 
			(unprocessedString = "tbtt") to k3fsm.genericGate;
		tester.genericGate sends runModel to k3fsm.genericGate;
		tester.genericGate sends getModelState to k3fsm.genericGate;
		k3fsm.genericGate sends FSMNewState 
			(producedString = "GreenYellowRedGreen") to tester.genericGate;
	}

	Test Description test2 uses configuration trafficLightConfiguration{
		tester.genericGate sends FSMNewState 
			(unprocessedString = "btb") to k3fsm.genericGate;
		tester.genericGate sends runModel to k3fsm.genericGate;
		tester.oclGate sends oclQuery (query = "self.producedString") 
			to k3fsm.oclGate;
		k3fsm.oclGate sends "YellowRedGreen" to tester.oclGate;
	}
}