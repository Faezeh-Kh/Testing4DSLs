Package testSuite {
	Import all from common ;
	Import all from k3fsmSpecificTypes ;
	Import all from testConfiguration ;
	
	FSM FSMNewState(_name = "toUpperCase");
	State S0 (_name = "S0");
	
	Test Description test1 uses configuration upperCaseConfiguration{
		tester.genericGate sends FSMNewState 
			(unprocessedString = "my naMe IS FaezeH") to k3fsm.genericGate;
		tester.genericGate sends runModel to k3fsm.genericGate;
		tester.genericGate sends getModelState to k3fsm.genericGate;
		k3fsm.genericGate sends FSMNewState 
			(producedString = "MY NAME IS FAEZEH") to tester.genericGate;
	}

	Test Description test2 uses configuration upperCaseConfiguration{
		tester.genericGate sends FSMNewState 
			(unprocessedString = "my_naMe.IS FaezeH") to k3fsm.genericGate;
		tester.genericGate sends runModel to k3fsm.genericGate;
		tester.oclGate sends oclQuery (query = "self.producedString") 
			to k3fsm.oclGate;
		//failed test case (produced string: MY)
		k3fsm.oclGate sends "MY NAME IS FAEZEH" to tester.oclGate;
	}
}